# ============================
# ðŸŽ¨ COLOR CONFIGURATION
# ============================
RED     = \033[91;1m
GREEN   = \033[92;1m
YELLOW  = \033[93;1m
BLUE    = \033[94;1m
PINK    = \033[95;1m
CLEAR   = \033[0m

# ============================
# ðŸ”§ PROJECT CONFIG
# ============================
NAME    = PmergeMe
CC      = c++
CFLAGS  = -Wall -Wextra -Werror -std=c++98

SRC     =	main.cpp \
			PmergeMe.cpp

OBJ_DIR = obj
OBJ     = $(SRC:%.cpp=$(OBJ_DIR)/%.o)

DEPS    = 

# ============================
# ðŸ§± BUILD RULES
# ============================

all: $(NAME)

# Executable build
$(NAME): $(OBJ)
	@echo "$(PINK)âœ¨ Linking executable...$(CLEAR)"
	$(CC) $(OBJ) $(CFLAGS) -o $(NAME)
	@echo "$(GREEN)âœ… Build successful!$(CLEAR)"

# Compiles each .cpp file into obj/.o
$(OBJ_DIR)/%.o: %.cpp $(DEPS)
	@mkdir -p $(OBJ_DIR)
	@echo "$(BLUE)ðŸ“¦ Compiling $< -> $@$(CLEAR)"
	$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)âœ” Done.$(CLEAR)"

# ============================
# ðŸ§¼ CLEANING RULES
# ============================

clean:
	@echo "$(YELLOW)ðŸ§¹ Cleaning object files...$(CLEAR)"
	@rm -rf $(OBJ_DIR)
	@echo "$(GREEN)âœ” Object files removed.$(CLEAR)"

fclean: clean
	@echo "$(YELLOW)ðŸ§½ Removing executable...$(CLEAR)"
	@rm -rf $(NAME)
	@echo "$(GREEN)âœ” Executable removed.$(CLEAR)"

re: fclean all

# ============================
# ðŸš€ QUICK TEST RULE
# ============================
test: re
	@echo "$(BLUE)ðŸš€ Running program...$(CLEAR)"
	@./$(NAME)

.PHONY: all clean fclean re test